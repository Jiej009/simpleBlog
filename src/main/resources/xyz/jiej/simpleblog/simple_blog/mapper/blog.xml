<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.jiej.simpleblog.simple_blog.dao.BlogDao">

    <resultMap id="BlogResultMap" type="xyz.jiej.simpleblog.simple_blog.entity.Blog">
        <!-- 用id属性来映射主键字段 -->
<!--        <id column="_id" jdbcType="VARCHAR" property="id" />-->
        <!-- 用result属性来映射非主键字段 -->
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    </resultMap>

    <select id="findAll" resultType="xyz.jiej.simpleblog.simple_blog.entity.Blog" resultMap="BlogResultMap">
        select * from blog.blog
    </select>

</mapper>